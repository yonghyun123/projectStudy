package com.yonghyun.projectStudy.service;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;

import com.yonghyun.projectStudy.dao.UsersDao;
import com.yonghyun.projectStudy.domain.Users;

@Service
@Transactional
public class UsersServiceImpl implements UsersService {
	@Autowired
	UsersDao employeeDao;
	private static final Logger logger = LoggerFactory.getLogger(UsersServiceImpl.class);

	@Override
	public Users getUsers(String usersEmail) {
		// TODO Auto-generated method stub
		return employeeDao.getUsers(usersEmail);
	}

	@Override
	public Users signupUsers(String usersName, String usersEmail, String usersPassword) {
		// TODO Auto-generated method stub
		logger.info("UsersServcice ===> in"+usersName);
		logger.info("UsersServcice ===> in"+usersEmail);
		logger.info("UsersServcice ===> in"+usersPassword);
		return employeeDao.signupUsers(usersName, usersEmail, usersPassword);
	}
	
}
