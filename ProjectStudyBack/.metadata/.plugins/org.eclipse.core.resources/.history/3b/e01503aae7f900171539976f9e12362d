package com.yonghyun.projectStudy.dao;

import org.mybatis.spring.SqlSessionTemplate;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

import com.yonghyun.projectStudy.domain.Users;

@Repository
public class UsersDao {
	private final String NAMESPACE = "com.yonghyun.projectStudy.mapper.UsersMapper.";
	
	@Autowired
	private SqlSessionTemplate sqlSession;
	
	public Users getUsers(int id){
		return this.sqlSession.selectOne(NAMESPACE + "getUsers", id);
	}
	
	public Users getEmail(String usersEmail){
		return this.sqlSession.selectOne(NAMESPACE + "getEmail", usersEmail);
	}
	
	public Users signupUsers(String usersEmail, String usersPassword, String usersName){
		Users checkEmail = getEmail(usersEmail);
		if(checkEmail != null){
			return checkEmail;
		}
		else{
			return null;
		}
		
	}
}
